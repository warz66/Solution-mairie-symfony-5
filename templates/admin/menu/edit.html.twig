{% extends 'admin/base.html.twig' %}

{% block title %}Administration du menu{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Administration du menu</h1>
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-lg-6 mb-5">
                <div class="card bg-light bg-white">
                    <div class="card-header text-center bg-primary">
                        <h4 class="card-title text-white">
                            <i class="fas fa-tasks"></i>
                            Agencement du menu
                        </h4>
                    </div>
                    <div class="card-body"> 
                        {{ form_widget(form) }}
                        <div class="row">
                            <div class="col">
                                <div class="d-flex justify-content-center">
                                    <button id="submit" type="submit" class="btn btn-primary mr-2">
                                        <span id="b-e-default"><i class="far fa-save"></i></span> 
                                        <span id="b-e-loading" class="spinner-border spinner-border-sm" style="display:none;" role="status"></span>
                                        &nbsp;Valider
                                    </button>
                                    {#<a href="{{ path('admin_menu_edit') }}" class="btn btn-danger ml-2" id="cancel">
                                        <i class="fas fa-undo-alt"></i>&nbsp;&nbsp;Annuler les modifications
                                    </a>#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}