    <div class="container-fluid container-xl" id="infosMairie">
        <hr class="mb-5 mt-4 d-md-block d-none">
        <div class="row d-flex align-items-center justify-content-center">
            {% if information.complement is not empty %}
                <div class="col-md-4 mb-3">
                    {{information.complement | raw}}
                </div>
            {% endif %}
            <div class="col-md-4 mb-3">
                <div class="pb-2">
                    {% for reseauSocial in information.reseauxSociaux %}
                        <a rel="noopener" href="{{reseauSocial.url}}" target="_blank" class="btn {{reseauSocial.icone}} fa-2x p-2" title="{{reseauSocial.nom}}"></a>
                    {% endfor %}
                </div>
                <div class="pb-4">
                    {{information.adresse}}<br>{{information.cp}} {{information.ville}}<br>Tel: {{information.telephone}}
                </div>
            </div>
             {% if information.horaire is not empty %}
                <div class="col-md-4 mb-3">
                    {{information.horaire | raw}}
                </div>
            {% endif %}
        </div>
        <hr class="mb-5 mt-4 d-md-block d-none">
    </div>

    {{render(controller('App\\Controller\\MenuController::mainMenu'))}}

        {% for label, messages in app.flashes %}
